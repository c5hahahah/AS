<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/community_write"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"

            />
        <TextView
            android:id="@+id/community_fragment_tv_jinghua"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="精华"
            android:layout_gravity="center_vertical"
            android:background="@drawable/community_textview_left_choose"
            android:layout_marginLeft="75dp"
            android:gravity="center"
            android:textColor="#fff"

            />
        <TextView
            android:id="@+id/community_fragment_tv_zuixin"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="最新"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/community_textview_right"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#50cccccc"
        />
    <FrameLayout
        android:id="@+id/community_fragment_framlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>