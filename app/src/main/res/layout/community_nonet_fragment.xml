<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/community_nonet_fragment_btn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/community_nonet_fragment"
        android:text="点击刷新 "
        android:layout_centerInParent="true"
        android:gravity="center"
        />
        <TextView
            android:id="@+id/community_nonet_fragment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络开小差，内容加载不出来"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/community_nonet_fragment_btn"
            android:layout_marginBottom="20dp"
            android:textColor="#ccc"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/community_nonet"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/community_nonet_fragment_tv"
            android:layout_marginBottom="10dp"

            />
</RelativeLayout>